@model IEnumerable<ABMODELE.Models.Ingrediente>

@{
    ViewBag.Title = "InformeIngredientes";
}

<h2>InformeIngredientes</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disponibilidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioSingular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EsAuxiliar)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Disponibilidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioSingular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EsAuxiliar)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IngredienteId }) |

        </td>
    </tr>
}

</table>
